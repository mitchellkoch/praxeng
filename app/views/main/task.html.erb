<div class="row" id="notif_row" >
<div class="col-sm-6 col-sm-offset-3" id="notif" role="alert">
	<h4>
		PROGRESS
	</h4>
	<div class="progress">
	  <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: <%=@num_questions*100/@total_questions%>%;">
	  </div>
	</div>
</div>
</div>

<% if @last%>
				<div class="modal fade" id="details" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
				  <div class="modal-dialog">
				    <div class="modal-content">
				      <div class="modal-header">
				        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
				        <h4 class="modal-title" id="myModalLabel">What others chose</h4>
				      </div>
				      <div class="modal-body">
								<% @instance.answers.each do |opt|%>
										<div class="progress">
										  <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: <%= @crowd[opt["relation_display_name"]]%>%">
										    <span class="lbl"><span class="label label-default"><%=@user_resp[opt["relation_display_name"]]%></span><span id="option"><span id="arg1"><%= @instance.args[0]["text"]%><%= @instance.args[0]["mention_text"]%></span> <em><%= opt["relation_display_name"] %></em> <span id="arg2"><%=@instance.args[1]["text"] %><%= @instance.args[1]["mention_text"]%></span> (<%= @crowd1[opt["relation_display_name"]]%>/<%= @ann_count%>)</span></span>
										  </div>
										</div>		
								<% end %>
				      </div>
				      <div class="modal-footer">
				        <button type="submit" class="btn btn-primary">Challenge Answer</button>
				      </div>
				    </div>
				  </div>
				</div>

<%end%>

<div class="row" id="task_question">	
	<div class="col-sm-6 col-sm-offset-3" id="questionDiv">
			<p id="instruction"><strong>Step 1:</strong> Carefully read the following sentence:</p>
			<p id="question" class="well">
				<% i =0 %>		
				<%@current_sentence.split(" ").length.times do %>
					<% if (i>=@current_instance.args[0]["sent_tok_span"][0] && i<@current_instance.args[0]["sent_tok_span"][1]) %>
						<span id="arg1"><%= @current_sentence.split(" ")[i]%></span>
					<%elsif (i>=@current_instance.args[1]["sent_tok_span"][0] && i<@current_instance.args[1]["sent_tok_span"][1])%>
							<span id="arg2"><%= @current_sentence.split(" ")[i]%></span>
					<%else%>
						<%= @current_sentence.split(" ")[i]%>
					<%end%>
					<% i+= 1 %>
				<%end%>
			</p>
	
			<p id="instruction"><strong>Step 2:</strong> Fill in the blank based on information conveyed in the sentence. Select all options.</p>
		
		<p id="question" class="well"><span id="arg1"> <%= @current_instance.args[0]["text"]%><%= @current_instance.args[0]["mention_text"]%> </span> <u><span id="blank">ssssssssssssssssss</span></u> <span id="arg2"> <%=@current_instance.args[1]["text"] %><%= @current_instance.args[1]["mention_text"]%></span></p>
	
		<form action='/english-comprehension-practice/response' role="form" method="post">
		  <div class="form-group">
				<div class="btn-toolbar-vertical" data-toggle="buttons">
					<% i=0 %>
					<% @current_instance.answers.each do |opt|%>
						<label class="btn btn-default btn-lg btn-block" id="checkboxes">
							<input type="checkbox" name="response[r<%=i%>]" value="<%=opt["relation_display_name"]%>" /><span id="option"><em><%= opt["relation_display_name"] %></em></span>
						</label>
						<% i=i+1 %>
					<% end %>
				</div>

				<div class="btn-toolbar-vertical">
					<!-- <button type="button" class="btn btn-danger btn-lg">Skip</button> -->
					<button type="submit" class="btn btn-primary btn-lg btn-block" name="option" value="submit" data-toggle="modal"  >Submit</button>	
					<button type="submit" class="btn btn-danger btn-lg btn-block" name="option" value="none" data-toggle="modal" >None of these</button>		
				</div>
		
				<input type="hidden" name="instance_id" value= "<%= @current_instance.id %>">
				<input type="hidden" name="user_id" value= "<%= @curr_user.id %>">
		
			</div>
		</form>
	</div>	
</div>

