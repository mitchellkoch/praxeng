<div class="row">
	<div class="jumbotron" id="task_heading">
		
		<div class="row">
				<p id="sentence">
				<% i =0 %>
				<%@current_sentence.split(" ").length.times do %>
					<% if (i>=@current_instance.args[0]["sent_tok_span"][0] && i<@current_instance.args[0]["sent_tok_span"][1]) %>
						<span id="arg1"><%= @current_sentence.split(" ")[i]%></span>
					<%elsif (i>=@current_instance.args[1]["sent_tok_span"][0] && i<@current_instance.args[1]["sent_tok_span"][1])%>
							<span id="arg2"><%= @current_sentence.split(" ")[i]%></span>
					<%else%>
						<%= @current_sentence.split(" ")[i]%>
					<%end%>
					<% i+= 1 %>
				<%end%>
			</p>
			<h2><small>Does the above sentence convey?</small></h2>
		</div>
		
		<div class="col-md-6 col-md-offset-3">
			<form action='/main/create' role="form" method="post">
			  <div class="form-group">
					<div class="row">
						<div class="btn-toolbar-vertical" data-toggle="buttons">
						<% i=0 %>
						<% @current_instance.answers.each do |opt|%>
							<label class="btn btn-default btn-lg btn-block">
								<input type="checkbox" name="response[r<%=i%>]" value="<%=opt["relation_display_name"]%>"><span id="option"><span id="arg1"> <%= @current_instance.args[0]["text"]%><%= @current_instance.args[0]["mention_text"]%> </span><em><%= opt["relation_display_name"] %></em><span id="arg2"> <%=@current_instance.args[1]["text"] %><%= @current_instance.args[1]["mention_text"]%></span></span>
							</label>
							<% i=i+1 %>
						<% end %>
						</div>
					</div>
	
					<div class="row">
						<div class="btn-toolbar">
							<!-- <button type="button" class="btn btn-danger btn-lg">Skip</button> -->
							<button type="submit" class="btn btn-success btn-lg btn-block" name="option" value="submit">Submit</button>	
							<button type="submit" class="btn btn-danger btn-lg btn-block" name="option" value="none">None of these</button>
							
						</div>		
					</div>
				</div>
			
				<input type="hidden" name="instance_id" value= "<%= @current_instance.id %>">
				<input type="hidden" name="user_id" value= "<%= @curr_user.id %>">
			</form>
		</div>
</div>
